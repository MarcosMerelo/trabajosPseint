Algoritmo Area_triangulo
	//Entrada
	Definir base, altura, area Como Real;
	Escribir "Programa que calcula el area de un triangulo";
	Escribir "Ingrese la base:";
	Leer base;
	Escribir "Ingrese la altura";
	Leer altura;
	//Proceso 
	area<-(base*altura)/2;
	//Salida
	Escribir "El area del triangulo es:", area;
	
FinAlgoritmo